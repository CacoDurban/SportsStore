@model IEnumerable<string>

@{
    Layout = null;
}

@Html.ActionLink("Home", "List", "Product")
 <br />
@foreach (var category in Model)
{
    @Html.RouteLink(category, new { controller = "Product", action = "List", category = category, page = 1 },
    new
    {
        @class= category == ViewBag.SelectedCategory ? "selected" : "noselected"
    }
    )
    <br />
}
